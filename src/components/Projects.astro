---
import NextJs from "./icons/NextJs.astro";
const TAGS = {
  NEXT: {
    name: "Next.Js",
    class: "bg-black text-white",
    icon: NextJs,
  },
};

const PROJECTS = [
  {
    title: "Blog General",
    description:
      "Es una pagina web donde puedes leer y escribir blogs de informacion general, sobre la comunidad o cualquier tema que te interece.",
    link: "https://blog-app-production-299b.up.railway.app/",
    github: "https://github.com/jhosbel/blog-app",
    image: "/projects/blog_web_image.webp",
    tags: [TAGS.NEXT],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${title}`}
      />
    </article>
  ))
}
