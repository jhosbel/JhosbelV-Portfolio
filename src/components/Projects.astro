---
import LinkButton from "./LinkButton.astro";
import GitHub from "./icons/GitHub.astro";
import WebPage from "./icons/WebPage.astro";
import NextJs from "./icons/NextJs.astro";
import MongoDB from "./icons/MongoDB.astro";
import JavaScript from "./icons/JavaScript.astro"
import Html from "./icons/Html.astro"
import Css from "./icons/Css.astro"
import React from "./icons/React.astro"

const TAGS = {
  NEXT: {
    name: "Next.Js",
    class: "bg-black text-white",
    icon: NextJs,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-black text-white",
    icon: MongoDB,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-black text-white",
    icon: JavaScript,
  },
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-black text-white",
    icon: Css,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },
};

const PROJECTS = [
  {
    title: "Blog General",
    description:
      "Es una pagina web donde puedes leer y escribir blogs de informacion general, sobre la comunidad o cualquier tema que te interece.",
    link: "https://blog-app-production-299b.up.railway.app/",
    github: "https://github.com/jhosbel/blog-app",
    image: "/projects/blog_web_image.webp",
    tags: [TAGS.REACT, TAGS.NEXT, TAGS.MONGODB],
  },
  {
    title: "Web sobre Neon Genesis Evangelion",
    description:
      "Una web simple donde muestro información sobre el manga de Neon Genesis Evangelion como historia, personajes, etc. Como también Wallpaper y los primeros 4 capítulos del manga.",
    link: "https://evangelion-web.netlify.app/",
    github: "https://github.com/jhosbel/Evangelion-App",
    image: "/projects/eva_portada.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "Rick And Morthy Web",
    description:
      "Pagina web sobre la serie famosa Rick and Morthy donde se muestra la información sobre los personajes de la serie consumiendo la api publica de Rick and Morthy.",
    link: "https://rick-and-morthy-api.vercel.app",
    github: "https://github.com/jhosbel/rick-and-morthy-api",
    image: "/projects/ram_portada.webp",
    tags: [TAGS.REACT, TAGS.NEXT],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ title, description, tags, image, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          class="rounded shadow-2xl shadow-white/10"
          src={image}
          alt={`Captura de pantalla del proyecto ${title}`}
        />
        <footer class="flex gap-x-4 justify-start mt-4">
          {github && (
            <LinkButton target="_blank" href={github}>
              <GitHub class="size-6" />
              ver codigo fuente
            </LinkButton>
          )}
          <LinkButton target="_blank" href={link}>
            <WebPage />
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>
