---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import LanguagesSwitch from "../components/LanguagesSwitch.astro"

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header
  class="flex justify-center items-center mx-auto py-5 sticky top-0 w-full xl:w-[1120px] z-10"
>
  <nav
    class="border border-black rounded-full px-2 md:px-3 py-1 flex flex-row items-center bg-black/50 backdrop-blur-2xl"
  >
    <a
      class="hover:bg-white/10 text-xs md:text-base rounded-full px-2 md:px-3 transition"
      href="#top">{t('nav.home')}</a
    >
    <a
      class="hover:bg-white/10 text-xs md:text-base rounded-full px-2 md:px-3 transition"
      href="#experiencia">{t('nav.experience')}</a
    >
    <a
      class="hover:bg-white/10 text-xs md:text-base rounded-full px-2 md:px-3 transition"
      href="#proyectos">{t('nav.projects')}</a
    >
    <a
      class="hover:bg-white/10 text-xs md:text-base rounded-full px-1 md:px-3 transition"
      href="#sobre-mi">{t('nav.about')}</a
    >
    <a
      class="hover:bg-white/10 text-xs md:text-base rounded-full px-2 md:px-3 transition"
      href="#contacto">{t('nav.contact')}</a
    >
    <LanguagesSwitch />
  </nav>
</header>
