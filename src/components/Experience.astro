---
import ExperienceItem from "./ExperienceItem.astro";
import { getI18n } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });

const EXPERIENCE = [
  {
    date: i18n.experiences.date_5,
    company: i18n.experiences.company_5,
    title: i18n.experiences.title_experience_5,
    description: i18n.experiences.description_experience_5,
  },
  {
    date: i18n.experiences.date_1,
    company: i18n.experiences.company_1,
    title: i18n.experiences.title_experience_1,
    description: i18n.experiences.description_experience_1,
  },
  {
    date: i18n.experiences.date_2,
    company: i18n.experiences.company_2,
    title: i18n.experiences.title_experience_2,
    description: i18n.experiences.description_experience_2,
    link: "https://groovy.click/",
  },
  {
    date: i18n.experiences.date_3,
    company: i18n.experiences.company_3,
    title: i18n.experiences.title_experience_3,
    description: i18n.experiences.description_experience_3,
    link: "https://chimba.ooo/",
  },
  {
    date: i18n.experiences.date_4,
    company: i18n.experiences.company_4,
    title: i18n.experiences.title_experience_4,
    description: i18n.experiences.description_experience_4,
  },
];
---

<ol class="relative border-s border-gray-200 ml-3">
  {
    EXPERIENCE.map((experience) => (
      <li class="mb-10 ms-4">
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
